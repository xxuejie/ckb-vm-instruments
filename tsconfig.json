{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node10",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["./examples/**/*", "./lib/**/*"]
}
